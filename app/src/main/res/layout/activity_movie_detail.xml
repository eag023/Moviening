<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:text="@string/no_poster"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:background="@color/light_gray"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/img_detail_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/txt_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_title"
                    android:textColor="@android:color/black"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/txt_detail_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="----"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txt_detail_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/no_genres"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:paddingHorizontal="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:id="@+id/layout_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star7"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star8"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star9"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                        <ImageView
                            android:id="@+id/star10"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="@color/orange"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_rating_pill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_rating_pill"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/btn_detail_fav"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_heart"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                    <ImageView
                        android:id="@+id/btn_detail_watched"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_eye"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                    <ImageView
                        android:id="@+id/btn_detail_watchlist"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_clock"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                    <ImageView
                        android:id="@+id/btn_detail_add_list"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_list"
                        android:padding="0dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_rate_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bt_rate"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/synopsis"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/txt_detail_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_bio"
                    android:textSize="15dp"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="4"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/btn_expand_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_more"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"/>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:tabIndicatorColor="@color/purple"
                    app:tabSelectedTextColor="@color/purple"
                    app:tabTextColor="@android:color/darker_gray">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/crew"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews"/>
                </com.google.android.material.tabs.TabLayout>

                <LinearLayout
                    android:id="@+id/layout_team_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:visibility="visible"
                    android:minHeight="400dp">

                    <TextView
                        android:id="@+id/lbl_director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/director"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_directors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"/>

                    <TextView
                        android:id="@+id/lbl_actors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cast"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_actors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_reviews_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:visibility="gone"
                    android:minHeight="400dp">

                    <LinearLayout
                        android:id="@+id/layout_user_average_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/users_rate"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/purple"
                            android:layout_marginBottom="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/user_star1"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star2"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star3"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star4"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star5"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star6"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star7"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star8"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star9"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                                <ImageView
                                    android:id="@+id/user_star10"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star_outline"
                                    app:tint="@color/purple"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_user_average_pill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/bg_rating_pill"
                                android:backgroundTint="@color/purple"
                                android:text="0.0"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lbl_reviews_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txt_no_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_rate"
                        android:gravity="center"
                        android:padding="20dp"
                        android:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_related_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:minHeight="400dp">
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_gray"
        android:visibility="gone"
        android:elevation="20dp">
        <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/img_full_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:zoomage_restrictBounds="false"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.6"
            app:zoomage_maxScale="8.0" />
        <ImageButton
            android:id="@+id/btn_close_overlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/white" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>