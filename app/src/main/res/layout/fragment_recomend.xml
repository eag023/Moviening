<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_start_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/layout_movie_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_of_the_day"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="4dp">
                    <ImageView
                        android:id="@+id/img_day_poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_day_title"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="@color/purple"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_day_director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10dp"/>
                    <TextView
                        android:id="@+id/txt_day_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lbl_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recomend"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/layout_movie_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recomend_hint"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_main_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/ring_1"
            android:layout_width="240dp"
            android:layout_height="280dp"
            android:src="@drawable/bg_neon_ring"
            app:layout_constraintBottom_toBottomOf="@id/btn_start"
            app:layout_constraintEnd_toEndOf="@id/btn_start"
            app:layout_constraintStart_toStartOf="@id/btn_start"
            app:layout_constraintTop_toTopOf="@id/btn_start"
            android:alpha="0.3"
            app:tint="@color/purple"/>
        <ImageView
            android:id="@+id/ring_2"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:src="@drawable/bg_neon_ring"
            app:layout_constraintBottom_toBottomOf="@id/btn_start"
            app:layout_constraintEnd_toEndOf="@id/btn_start"
            app:layout_constraintStart_toStartOf="@id/btn_start"
            app:layout_constraintTop_toTopOf="@id/btn_start"
            android:alpha="0.2"
            app:tint="@color/purple"/>
        <ImageView
            android:id="@+id/ring_3"
            android:layout_width="320dp"
            android:layout_height="360dp"
            android:src="@drawable/bg_neon_ring"
            app:layout_constraintBottom_toBottomOf="@id/btn_start"
            app:layout_constraintEnd_toEndOf="@id/btn_start"
            app:layout_constraintStart_toStartOf="@id/btn_start"
            app:layout_constraintTop_toTopOf="@id/btn_start"
            android:alpha="0.1"
            app:tint="@color/purple"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/purple"
            android:elevation="10dp"
            android:text="@string/start"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_random"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/orange"
            android:elevation="10dp"
            android:text="@string/random"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ring_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_reveal_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        android:visibility="invisible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_wizard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:padding="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_question_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Â¿Pregunta?"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/scroll_options"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp"/>

            <ScrollView
                android:id="@+id/scroll_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="false"
                app:layout_constrainedHeight="true"
                app:layout_constraintHeight_max="400dp"
                app:layout_constraintTop_toBottomOf="@id/txt_question"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:id="@+id/container_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingBottom="16dp">
                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_results_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movies_found"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="32dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:paddingHorizontal="70dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/view_fade_left"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:background="@drawable/fade_gradient"
                    android:elevation="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/viewpager_carousel"
                    app:layout_constraintBottom_toBottomOf="@id/viewpager_carousel"/>

                <View
                    android:id="@+id/view_fade_right"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:background="@drawable/fade_gradient"
                    android:rotation="180"
                    android:elevation="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/viewpager_carousel"
                    app:layout_constraintBottom_toBottomOf="@id/viewpager_carousel"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_no_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_movies_found"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="32dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/done"
                android:textSize="18dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                app:cornerRadius="30dp"
                android:layout_marginTop="48dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_searching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:indeterminateTint="@android:color/white"/>
            <TextView
                android:id="@+id/txt_searching_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/searching_movie"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>